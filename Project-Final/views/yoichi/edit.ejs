    <main>
      <!-- Modal  ADD Product -->
      <div
        class="modal fade"
        id="Modal-add-product"
        tabindex="-1"
        aria-labelledby="Modal-add-productLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="Modal-add-productLabel">
                新增商品
              </h1>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <form action="" id="yoichi-product-add">
                <label for="yoichi-p-add-setName">產品名稱</label>
                <input
                  type="text"
                  id="yoichi-p-add-setName"
                  name="yoichi-p-add-setName"
                />
                <label for="yoichi-p-add-setPrice">售價</label>
                <input
                  type="text"
                  id="yoichi-p-add-setPrice"
                  name="yoichi-p-add-setPrice"
                />
              </form>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                取消
              </button>
              <button
                id="yoichi-p-addSave"
                type="button"
                class="btn btn-primary"
                data-bs-dismiss="modal"
              >
                保存
              </button>
            </div>
          </div>
        </div>
      </div>
      <!-- Modal  ADD Product -->
      <!-- Modal  Edit Product -->
      <div
        class="modal fade"
        id="Modal-edit-product"
        tabindex="-1"
        aria-labelledby="Modal-edit-productLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="Modal-edit-productLabel">
                編輯商品
              </h1>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <form action="" id="yoichi-product-edit">
                <label for="yoichi-p-edit-setName">商品名稱</label>
                <input
                  type="text"
                  id="yoichi-p-edit-setName"
                  name="yoichi-p-edit-setName"
                />
                <label for="yoichi-p-edit-setPrice">售價</label>
                <input
                  type="text"
                  id="yoichi-p-edit-setPrice"
                  name="yoichi-p-edit-setPrice"
                />
              </form>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-danger"
                data-bs-dismiss="modal"
                id="yoichi-p-delete"
              >
                刪除
              </button>
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >
                取消
              </button>
              <button
                id="yoichi-p-editSave"
                type="button"
                class="btn btn-primary"
                data-bs-dismiss="modal"
              >
                保存
              </button>
            </div>
          </div>
        </div>
      </div>
      <!-- Modal  Edit Product -->
      <!-- 以上為平時看不見的Modal -->
      <section class="show-products">
        <div class="yoichi-p-shows">
          <div class="yoichi-p-show-name">產品名稱</div>
          <div class="yoichi-p-show-price">價格</div>
          <div class="yoichi-p-show-edit-title"></div>
        </div>
